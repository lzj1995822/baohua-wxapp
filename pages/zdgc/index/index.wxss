page {
}

.bg {
  width: 100%;
}

.container {
  position: absolute;
  width: 100%;
  top:430rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.operation-section {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.operation-item-icon {
  height: 200rpx;
  width: 280rpx;
}

.message-section {
  background: white;
  width: 520rpx;
  display: flex;
  flex-direction: column;
}

.message-top-icon {
  width: 680rpx;
  margin-top: 30rpx;
}

.message-section {
  margin-top: 5rpx;
  width: 680rpx;
  display: flex;
  flex-direction: column;
}

.message-item {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgb(206, 203, 203);
}

.message-left {
  height: 100rpx;
  width: 100rpx;
  padding: 20rpx;
}

.message-right {
  padding: 10rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.message-title{
  width:620rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.message-time {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.message-time-icon {
  height: 25rpx;
  width: 25rpx;
  margin: 10rpx 10rpx 10rpx 0;
}

.message-time-value {
  font-size: 25rpx;
  color: rgb(206, 203, 203);
}

.load-more-section {
  width: 660rpx;
  color: #4f5de3;
  border: 1rpx solid rgb(206, 203, 203);
  border-top: 0 solid white;
  border-radius: 0 0 10rpx 10rpx;
  padding: 10rpx;
  text-align: center;
}
