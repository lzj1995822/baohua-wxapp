.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.userinfo-section {
  position: relative;
}
.head-bg{
  width: 100%;
  height: 150rpx;
}
.useninfo-content{
  position: absolute;
  top:0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-img{
  height: 100rpx;
  width: 100rpx;
  margin: 20rpx;
}
.userinfo-center{
  flex-grow: 1;
  color: white;
}
.userinfo-nickname{
  font-size: 35rpx;
  padding-bottom:10rpx;
}
.userinfo-detail-icon{
  width:30rpx;
  height: 50rpx;
  margin: 20rpx;
}
.operation-section {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.operation-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  background: white;
}

.operation-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.operation-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.logout-section {
  background: red;
  color: white;
  text-align: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
  margin-top: 20rpx;
}

.operation-left-icon{
  height: 50rpx;
  width: 50rpx;
  margin: 15rpx;
}
.operation-right-icon {
  height: 40rpx;
  width: 40rpx;
  margin: 15rpx;
}