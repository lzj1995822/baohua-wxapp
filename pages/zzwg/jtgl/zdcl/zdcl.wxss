.list-section{
  display: flex;
  flex-direction: column;
  width: 100%;
  border-bottom: 1rpx solid gainsboro;
}
.list-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  background: white;
}
.left{
  height: 200rpx;
  width: 200rpx;
  position: relative;

}
.cph-icon{
  width: 100%;
  margin-top:60rpx;
}
.cph-text{
  position: absolute;
  top:75rpx;
  left: 25rpx;
  color: white;
}
.right{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.right-row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row-name{
  color: rgb(163, 162, 162);
}
.row-icon{
  height: 50rpx;
  width: 50rpx;
  padding:10rpx;
}
.add-icon {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  right: 100rpx;
  bottom: 150rpx;
}