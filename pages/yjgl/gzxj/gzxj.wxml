<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" polyline="{{polyline}}" show-location style="width: 100%; height: 100vh;"></map>
<view class="operation">
  <view class="operation-item" wx:if="{{!isStart}}" catchtap="start">
    <image class="item-icon" src="/icons/ksxj.png" />
    <text class="item-text item-start-text">开始</text>
  </view>
  <view class="operation-item" wx:if="{{isStart}}" catchtap="stop">
    <image class="item-icon" src="/icons/jsxj.png" />
    <text class="item-text item-stop-text">结束</text>
  </view>
</view>