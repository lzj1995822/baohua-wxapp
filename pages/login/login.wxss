.bg{
  height: 100vh;
  width: 100%;
}
.container{
  position: absolute;
  top:20vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.logo{
  width: 350rpx;
}
.input-section{
  margin-top: 40rpx;
  width: 100%;
  padding:10rpx 50rpx;
}
.username,.password{
  flex: 2;
}
.remeber{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin:  0 25px;
  align-items: center;
}
.remeber-checkbox{
  height: 18px;
  width: 18px;
}
.login-button{
  flex: 1;
}
.login-input {
  display: flex;
  flex-direction: row;
  margin:  30px 25px;
  border-bottom: 1px solid rgb(165, 165, 165);
  align-items: center;
}
.login-input text {
  padding: 10px;
  color: rgb(165, 165, 165);
}